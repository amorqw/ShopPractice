@model Domain.Entities.UserDto.Register

@{
    ViewData["Title"] = "Регистрация";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="~/css/register.css" rel="stylesheet" />
</head>
<body>
<div class="register-container">
    <h2>Регистрация</h2>

    <form asp-action="Register" method="post">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="Введите ваш email" type="email"  value="@Model.Email" required name="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Введите пароль" required minlength="6" name="Password"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" placeholder="Введите ваше имя"  name="FirstName" required />
        </div>

        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" placeholder="Введите вашу фамилию"  name="LastName" required />
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="Введите ваш номер телефона" type="tel" pattern="\+?[0-9]{10,15}"  name="PhoneNumber" required />
        </div>

        <button type="submit" class="btn-primary">Зарегистрироваться</button>
    </form>
</div>

</body>
</html>
