@model IEnumerable<Domain.Entities.Cable>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Cables</title>
    <link href="~/admin.css" rel="stylesheet" />
</head>
<body>
<header>
    <h1>Manage Cables</h1>
    <nav class="admin-menu">
        <a href="/admin/cable">Manage Cable</a>
        <a href="/admin/category">Manage Category</a>
        <a href="/admin/order">Manage Order</a>
        <a href="/admin/cartitem">Manage Cart Items</a>
        <a href="/admin/manageuser">Manage Users</a>
    </nav>
</header>

<main>
    <button class="btn-add" onclick="window.location.href='/admin/cable/add'">Add New Cable</button>
    <div class="pizza-cards-container">
        @if (Model != null && Model.Any())
        {
            foreach (var cable in Model)
            {
                <div class="pizza-card">
                    <h3>ID: @cable.CableId</h3>
                    <p><strong>Name:</strong> @cable.CableName</p>
                    <p><strong>Description:</strong> @cable.CableDescription</p>
                    <p><strong>Price:</strong> @cable.Price â‚½</p>
                    <p><strong>Category:</strong> @cable.CategoryId</p>
                    <div class="pizza-actions">
                        <a href="/admin/cable/@cable.CableId" class="btn">Edit</a>
                        <form action="/admin/cable/delete/@cable.CableId" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No cables found</p>
        }
    </div>
</main>

<footer>
    <p>:)</p>
</footer>

</body>
</html>