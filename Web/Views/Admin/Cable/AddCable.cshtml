@* @model Domain.Entities.Cable

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Добавить кабель</title>
    <link href="~/css/add.css" rel="stylesheet"/>
</head>
<body>
<header>
    <h1>Добавить новый кабель</h1>
    <nav class="admin-menu">
        <a href="/admin/cable">Manage Cable</a>
        <a href="/admin/category">Manage Category</a>
        <a href="/admin/order">Manage Order</a>
        <a href="/admin/orderitem">Manage OrderItems</a>
        <a href="/admin/manageuser">Manage Users</a>
    </nav>
</header>

<main>
    <form action="/admin/addcable" method="post">
        <div>
            <label for="Title">Title:</label>
            @Html.TextBoxFor(m => m.Title, new { @required = "required" })
        </div>
        <div>
            <label for="Description">Description:</label>
            @Html.TextAreaFor(m => m.Description, new { @required = "required" })
        </div>
        <div>
            <label for="Price">Price:</label>
            @Html.TextBoxFor(m => m.Price, new { type = "number", step = "0.01", @required = "required" })
        </div>
        <div>
            <label for="Size">Size:</label>
            @Html.TextBoxFor(m => m.Size, new { @required = "required" })
        </div>
        <div>
            <label for="Receipt">Receipt:</label>
            @Html.TextBoxFor(m => m.Receipt, new { @required = "required" })
        </div>
        <button type="submit" class="btn">Add Pizza</button>
    </form>

</main>

<footer>
    <p>:)</p>
</footer>

</body>
</html>