<header>
    <div class="navbar">
        <div class="logo">
            <h1>
                <span class="red">Cable</span><span class="black">Shop</span>
            </h1>
        </div>
        <nav>
            <ul>
                @if (Context.Request.Cookies["tasty-cookies"] == null)
                {
                    <li>
                        <a href="/Login">Войти</a>
                    </li>
                    <li>
                        <a href="/Register">Регистрация</a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="/Menu">Каталог</a>
                    </li>
                    <li><a href="/Cart">Корзина</a></li>
                    <li>
                        <form action="/logout" method="post" style="display:inline;">
                            <button type="submit" class="logout-btn">Выйти</button>
                        </form>
                    </li>
                    @if (ViewBag.IsAdmin)
                    {
                        <li>
                            <a href="/admin">Админ-панель</a>
                        </li>
                    }
                }
            </ul>
        </nav>
    </div>
</header>

<div class="hero">
    <h2>Добро пожаловать в <span class="red">CableShop</span>!</h2>
    <p>Покупайте качественный кабель для любых нужд — быстро, удобно, онлайн.</p>
    <a href="/Menu" class="cta-btn">Перейти в каталог</a>
</div>

<div class="cable-list">
    @if (ViewBag.Cable != null)
    {
        @foreach (var cable in ViewBag.Cable)
        {
            <div class="cable-card">
                <div class="cable-image">
                    <img src="@cable.Image" alt="@cable.CableName"/>
                </div>
                <h3>@cable.CableName</h3>
                <p class="price"><strong>Цена:</strong> @cable.Price ₽ / 5м</p>
                <p class="desc">@cable.CableDescription</p>
                @if (Context.Request.Cookies["tasty-cookies"] != null)
                {
                    <div class="cable-actions">
                        <form action="/Cart/Add" method="post" style="display:inline;">
                            <input type="hidden" name="cableId" value="@cable.CableId"/>
                            <input type="hidden" name="quantity" value="1"/>
                            <button type="submit" class="btn">Добавить в корзину</button>
                        </form>
                    </div>
                }
                else
                {
                    <p class="not-authorized">Войдите, чтобы добавить в корзину.</p>
                }
            </div>
        }
    }
</div>

<footer>
    <p>© CableShop, 2024</p>
</footer>

<style>
    body {
        font-family: 'Segoe UI', Arial, sans-serif;
        background-color: #181818;
        color: #fff;
        margin: 0;
    }

    .navbar {
        background-color: #111;
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 3px solid #d32f2f;
    }

    .logo h1 {
        font-size: 2rem;
        margin: 0;
        font-weight: bold;
        letter-spacing: 2px;
    }
    .logo .red { color: #d32f2f; }
    .logo .black { color: #fff; }

    .navbar nav ul {
        list-style: none;
        display: flex;
        margin: 0;
        padding: 0;
    }

    .navbar nav ul li {
        margin-left: 25px;
    }

    .navbar nav ul li a, .logout-btn {
        color: #fff;
        text-decoration: none;
        font-size: 1rem;
        transition: color 0.2s;
        background: none;
        border: none;
        cursor: pointer;
    }

    .navbar nav ul li a:hover, .logout-btn:hover {
        color: #d32f2f;
    }

    .hero {
        background: linear-gradient(90deg, #d32f2f 0%, #111 100%);
        text-align: center;
        padding: 80px 20px 60px 20px;
        color: #fff;
    }

    .hero h2 {
        font-size: 2.5rem;
        margin-bottom: 15px;
    }

    .hero .cta-btn {
        background-color: #d32f2f;
        padding: 15px 35px;
        border-radius: 5px;
        font-size: 1.1rem;
        text-decoration: none;
        color: #fff;
        font-weight: bold;
        margin-top: 20px;
        display: inline-block;
        transition: background 0.2s;
    }

    .hero .cta-btn:hover {
        background-color: #b71c1c;
    }

    .cable-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        padding: 30px 10px;
        gap: 30px;
    }

    .cable-card {
        background-color: #222;
        border-radius: 10px;
        box-shadow: 0 4px 16px rgba(211, 47, 47, 0.15);
        width: 270px;
        padding: 25px 20px 20px 20px;
        text-align: center;
        transition: transform 0.2s, box-shadow 0.2s;
        border: 2px solid #d32f2f;
        position: relative;
    }

    .cable-card:hover {
        transform: translateY(-8px) scale(1.03);
        box-shadow: 0 10px 30px rgba(211, 47, 47, 0.25);
    }

    .cable-image img {
        width: 100%;
        height: 120px;
        object-fit: contain;
        margin-bottom: 15px;
        background: #fff;
        border-radius: 6px;
        padding: 5px;
    }

    .cable-card h3 {
        font-size: 1.3rem;
        color: #fff;
        margin-bottom: 10px;
    }

    .cable-card .price {
        color: #d32f2f;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .cable-card .desc {
        font-size: 0.98rem;
        color: #ccc;
        margin-bottom: 15px;
        min-height: 48px;
    }

    .cable-actions .btn {
        background-color: #d32f2f;
        color: #fff;
        border: none;
        padding: 10px 22px;
        font-size: 1rem;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
        transition: background 0.2s;
    }

    .cable-actions .btn:hover {
        background-color: #b71c1c;
    }

    .not-authorized {
        color: #ff5252;
        font-size: 0.95em;
        margin-top: 10px;
    }

    footer {
        background-color: #111;
        color: #fff;
        text-align: center;
        padding: 18px;
        font-size: 1rem;
        border-top: 2px solid #d32f2f;
        margin-top: 40px;
    }
</style>